<h2>Items you own</h2>
<div class="table-responsive">
<% if @user_items.length > 0 %>
<table class="table">
  <thead>
  <tr>
    <th>Item name</th>
    <th>Description</th>
    <th>Status</th>
    <th>Category</th>
    <th colspan="2">Manage</th>
  </tr>
  </thead>
  <tbody>
  <% @user_items.each do |item| %>
    <tr>
      <td><%= link_to item.name, item_path(item) %></td>
      <td><%= item.descr %></td>
      <td><%= item.status %></td>
      <td><%= item.category %></td>
      <td><%= link_to 'edit', edit_user_item_path(@user.id, item.id), class: "btn btn-primary" %> 
      <%= button_to 'delete', user_item_delete_item_path(@user.id, item.id), method: :put,
            data: { confirm: 'Are you sure?'}, class: "btn btn-primary" %></td> 
    </tr>
  <% end %>
  </tbody>
</table>
<%else%>
  <p>You don't own any items</p>
<%end%>
</div>
<div><%= link_to 'Add a new item', new_user_item_path(@user.id), class: "btn btn-primary"%></div>