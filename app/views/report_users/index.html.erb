<h1>Listing All Reports</h1>

<table>
  <tr>
    <th>Reporter</th>
    <th>Reportee</th>
    <th>Reason</th>
    <th>Comment</th>
    <th>Delete Report</th>

    <th></th>
  </tr>

  <% @reports.each do |report| %>
    <% reporter = User.find(report.reporter_id)%>
    <% reportee = User.find(report.reportee_id)%>

  <tr>
    <td><%=link_to "#{reporter.fname.capitalize} #{reporter.lname.capitalize}", user_path(reporter),style:"padding-right:1em" %></td>
    <td><%= link_to "#{reportee.fname.capitalize} #{reportee.lname.capitalize}", user_path(reportee),style:"padding-right:1em" %></td>
    <td style:"padding-right:1em" ><%= "#{report.reason}"%>&nbsp&nbsp&nbsp&nbsp</td>

    <td style:"padding-right:1em"><%= "#{report.comment}"%>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</td>
   <td><%=link_to "Delete",report_user_path(id: report.id),method: :delete,style:"padding-right:1em" %></td>

  </tr>
  <% end %>
</table>
