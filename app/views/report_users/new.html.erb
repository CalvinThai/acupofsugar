
<h1> Report Request</h1>
<p1>Please fill out this form to report the user: </p1> 


<div>
 <%= form_tag report_users_path(@reportUser), method: :post do %>
     <%= hidden_field_tag :reporter_id,current_user.id %>
     <%= hidden_field_tag :reportee_id, params[:reportee] %>
    <p>
      <%= label_tag'Select Reason for Report: ' %><br>
      	<%= select_tag(:reason, '<option value="Broken Item">Broken Item</option><option value="Missing Item">Missing Item</option><option value="Malicious User"> Malicious User</option><option value="Other">Other</option>'.html_safe) %>
      	
    </p>
    <p>
      <%= label_tag 'Leave comment: ' %><br>
      <%= text_area_tag :comment %>
    </p>
    <p>
      <%= submit_tag "Submit Report"%>
    </p>
  <% end %>
</div>