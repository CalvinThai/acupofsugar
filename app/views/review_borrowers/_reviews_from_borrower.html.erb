<div class="panel panel-default">
      <div class="panel-heading">
          <a data-toggle="collapse" href="#review_borrower"><h4 class="text-uppercase">From borrowers: <h4></a>
      </div>
      <div id="review_borrower" class="panel-collapse collapse in">
      <div class="panel-body">

		  <%if @reviews_by_borrower.length > 0 %>   
        <div class=" table-responsive">
          <table class="table">
            <tbody>
              <% @reviews_by_borrower.each do |reviewer| %>
               <% item = Item.find(reviewer.item_id)%>
              <tr>
                <td><%= "#{reviewer.fname} #{reviewer.lname}"%></td> <!-- link to view user profile?-->
                <td><div class="img-responsive rating-display" data-score="<%= reviewer.r_rating %>"></div></td>
                <td><%= item.name %></td>
                <td><%= reviewer.comment %></td>
              </tr>
              <%end%>
            </tbody>
          </table>
        </div>
        <%else%>
          <p>There's no review from borrowers</p>
        <%end%>
      </div>
    </div>
  </div>

<script>
  $('.rating-display').raty({
      readOnly: true,
      score: function() {
        return $(this).attr('data-score');
      },
      //path: '/assets/',
      size: 24
    });   
</script>