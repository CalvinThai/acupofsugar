<h1>A Cup of Sugar</h1>

<div class="center">
    <div class="row">
    <% @items.each do |item| %>
    <% if item.images.any? %>
        <div class="col-md-4 col-xs-8">
            <div class="icon">
                <div class="thumbnail" >
                    <%= link_to image_tag(item.images.first), item_path(item.id)%>
                </div>
                <div class="caption">
                    <h3><%= item.name %></h3>
                </div>
            </div>
        </div>
    <% end %>
    <% end %>
    </div>
    <%= link_to 'Look for Items!', items_path(), class: "cta-alt cta-background" %>
</div>
