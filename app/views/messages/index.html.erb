

<%#if @over_ten %>
 <%#= link_to ‘Show Previous’, ‘?m=all’ %>
<%# end %>
<div class=”ui segment”>
 <% @messages.each do |message| %>
  <% if message.body %>
   <% user = User.find(message.user_id) %>
   <div class=”item”>
    <div class=”content”>
     <div class=”header”><strong><%= user.fname %></strong>     <%= message.message_time %></div>
      <div class=”list”>
       <div class=”item”>
        <i class=”right triangle icon”></i>
         <%= message.body %>
      </div>
    </div>
   </div>
 </div>
 <% end %>
<% end %>
</div>

    <%= form_for [@conversation, @message] do |f| %>
      <%= f.text_field :body, :placeholder => "Type Message Here" %>
      <%= f.hidden_field :user_id, value: current_user.id%>
      <%= f.submit "Send Message" %>
    <% end %>
