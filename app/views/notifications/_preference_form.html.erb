 
<%= form_for([@user, @notification])  do |f| %>
 <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="text-uppercase">I'd like to receive email notifications on...<h4>
      </div>
      <div class="panel-body">
        <div class="form-group">
                <div class="field">
                    <li>
                    <%= f.label "Borrow / due date extension requests from others: " %>
                    <%= f.check_box :i_req_by_others %> <br /></li>
                </div>
                <div class="field">
                    <li>
                    <%= f.label "Approval for borrow / due date extension requests you sent: " %> 
                    <%= f.check_box :i_req_approval_alert %> <br /></li>
                </div>
                <div class="field">
                    <li>
                    <%= f.label "Early due date alert for an item on hold: " %> 
                    <%= f.check_box :i_due_alert %> <br /></li>
                </div>
        </div>
    </div>
</div>
<div class="actions">
  <p><%= f.submit "Confirm", class: "btn btn-primary", style: "width:100%" %></p>
  <p><%= link_to 'Cancel', user_path(@user.id), class: "btn btn-default", style: "width:100%" %></p>
</div>
<% end %>