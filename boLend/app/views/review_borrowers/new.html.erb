<h1>Review the borrower</h1>

<% if @review_borrower.errors.any? %>
    <div class="error_explanation">
      <h2>
        <%= pluralize(@review_borrower.errors.count, "error") %> prohibited
        this review from being saved:
      </h2>
      <ul>
        <% @review_borrower.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div id="item_profile">
  <% borrower = User.find(@borrower.id)%>
  <p>Borrower: <%= borrower.fname %> <%= borrower.lname %></p> <!-- should go to user profile page -->
	<p>Item: <%= @item.name %></p>
	<%= render partial: 'items/item_profile' %>
</div>

<p>Please fill out this review form after receiving the item.</p>
<div>
  <%= form_with(model: [@user, @review_borrower], local: true) do |form| %>
     <%= form.hidden_field(:user_id, :value => @user.id) %>
     <%= form.hidden_field(:item_id , :value => @item.id) %>
     <%= form.hidden_field(:borrower_id , :value => @borrower.id) %>
    <p>
      <%#= form.label 'Rate borrower: ' %>
      <%#= form.number_field :rating %>
      <div class="rating-form-brw">
        <label>Rate borrower: </label>
      </div>
    </p>
    <p>
      <%= form.label 'Leave comment: ' %><br>
      <%= form.text_area :comment %>
    </p>
    <p>
      <%= form.submit "Submit review"%>
    </p>
  <% end %>
</div>

<div>
  <%= link_to "cancel", user_items_path(@user.id) %>
</div>
