<div class="container table-responsive">
  <h3>Reviews for this item: </h3>
  <%if @reviews.length > 0 %>       
  <table class="table">
    <tbody>
      <% @reviews.each do |reviewer| %>
      <tr>
        <td><%= "#{reviewer.fname} #{reviewer.lname}"%></td> <!-- link to view user profile?-->
        <td><%= reviewer.rating %></td>
        <td><%= reviewer.comment %></td>
      </tr>
      <%end%>
    </tbody>
  </table>
  <% else %>
    There are no reviews yet
  <%end%>
</div>