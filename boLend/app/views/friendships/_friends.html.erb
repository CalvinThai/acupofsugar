<% friends = @user.friends %>
<div><strong> Friend List </strong></div>
<% if friends.empty?%><div>You don't have any friends yet! Please start by searching for users through the search bar above.</div><% end %>
<% for friend in friends%>
	<div >
		<%= link_to "#{friend.fname} #{friend.lname}", user_path(friend) %>
		<%= form_tag user_friendship_path(@user,id:1), method: :delete,style:'display:inline-block;',data: { confirm: "Are you sure to unfriend with #{friend.fname} #{friend.lname}?" },remote: true do %>
		  <%= hidden_field_tag :friend_remover, @user.id%>
		  <%= hidden_field_tag :friend_removee, friend.id %>
		  <%= hidden_field_tag :decision, "unfriend" %>
		  <%= submit_tag 'Remove Friend' %>
		<% end %>
		<%= form_tag user_friendship_path(@user,id:1), method: :delete,style:'display:inline-block;',data: { confirm: "Are you sure to block #{friend.fname} #{friend.lname}? This action will also do unfriending." },remote: true do %>
		  <%= hidden_field_tag :friend_remover, @user.id%>
		  <%= hidden_field_tag :friend_removee, friend.id %>
		  <%= hidden_field_tag :blockee_id, friend.id %>
		  <%= hidden_field_tag :decision, "block" %>
		  <%= submit_tag 'Block Friend' %>
		<% end %>
	</div>
<%end%>
<br/>
