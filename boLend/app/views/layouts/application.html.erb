<!DOCTYPE html>
<html>
  <head>
    <title>BoLend</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	<nav class="navbar" style="border-radius:0px;border-bottom: 1px solid rgba(0,0,0,0.2);margin:0px;">
		<div class="container" style="margin-top:1em;" >
			<div class="row">
				<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
					<ul class="list-inline">
				  	 	<li class="list-inline-item"> <%= link_to '<i class="fa fa-home" aria-hidden="true"></i> Home'.html_safe, root_path%></li>
				  		<li class="list-inline-item"> <%= link_to "Login", login_path %></li>
				  		<li class="list-inline-item"> <%= link_to "Signup", new_user_path %></li>
				  	  	<li class="list-inline-item"> <%= link_to "Logout", logout_path %> </li>
					</ul>
				</div>
				
				<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 text-center" style="font-style: italic;">
					Bolend
				</div>
				
				<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4" style="margin-top:-0.5em">
					<div class="input-group text-center pull-right">
						<%= form_tag(users_path, method: :get) do %>
	    					<%= text_field_tag :name, params[:name], placeholder: "Search user name", class: 'form-control' %>
							<span class="input-group-btn">
	    						<%= button_tag 'Search ', name: nil, class:'btn btn-default', style:'position:absolute;' do%>
									<i class="fa fa-search"></i>
								<%end%>
							</span>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</nav>
    <%= yield %>
	
  </body>
</html>
