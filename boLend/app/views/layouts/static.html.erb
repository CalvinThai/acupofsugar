<!DOCTYPE html>
<html>
  <head>
    <title>BoLend</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
	<style>
		body{
			padding-top: 70px;
		}
	</style>
  <body>
 	<nav class="navbar navbar-fixed-top" style="border-radius:0px;border-bottom: 1px solid rgba(0,0,0,0.2);margin:0px;background-color:white">
 	  <div class="container margin-top-1">
		  <div class="row">
			  <div class="col-xs-12">
		  <ul class="list-inline text-center">
		<li class="list-inline-item"> <%= link_to '<i class="fa fa-home" aria-hidden="true"></i> Home'.html_safe, root_path%></li>
		<% if session[:user_id].nil?%>
  			<li class="list-inline-item"> <%= link_to "Login", login_path %></li>
			<li class="list-inline-item"> <%= link_to "Signup", new_user_path %></li>
		<% end %>
		<% if not session[:user_id].nil?%>
			
  	  		<li class="list-inline-item"> <%= link_to "Logout", logout_path %> </li>
		<% end %>
		<li class="list-inline-item"> <%= link_to 'About', page_path('about') %> </li>
		<li class="list-inline-item"><%= link_to 'Terms of Services', page_path('tos') %></li>
		<li class="list-inline-item"><%= link_to 'Privacy Policy', page_path('privacy') %> </li>
		<li class="list-inline-item"><%= link_to 'FAQ', page_path('faq') %> </li>
	</div>
		</div>
	</ul>
 	  </div>
 	</nav>
    <%= yield %>
  </body>
</html>
