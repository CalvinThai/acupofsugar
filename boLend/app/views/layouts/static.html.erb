<!DOCTYPE html>
<html>
  <head>
    <title>BoLend</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
	<style>
		html {
		    position: relative;
		    min-height: 100%;
		}
		footer {
		    position: absolute;
		    left: 0;
		    bottom: 0;
		    height: 10em;
		    width: 100%;
		}
		
		body{
			padding-top: 70px;
			margin: 0 0 10em; /* bottom has to be the same as footer height */
		}
	</style>
  <body>
 	<nav class="navbar navbar-fixed-top" style="border-radius:0px;border-bottom: 1px solid rgba(0,0,0,0.05);margin:0px;background-color:white">
 	  <div class="container-fluid margin-top-1">
		  <div class="row">
			  <div class="col-xs-12">
		  <ul class="list-inline text-center">
		<li class="list-inline-item"> <%= link_to '<i class="fa fa-home" aria-hidden="true"></i> Home'.html_safe, root_path%></li>
		<% if session[:user_id].nil?%>
  			<li class="list-inline-item"> <%= link_to "Login", login_path %></li>
			<li class="list-inline-item"> <%= link_to "Signup", new_user_path %></li>
		<% end %>
		<% if not session[:user_id].nil?%>
			
  	  		<li class="list-inline-item"> <%= link_to "Logout", logout_path %> </li>
		<% end %>
	</div>
		</div>
	</ul>
 	  </div>
 	</nav>
	<footer>
		<div class="container-fluid" style="border-top: 1px solid rgba(0,0,0,0.05);margin:0px;background-color:white">
		<div class="row text-center margin-top-4">
			<div class="col-xs-2"></div>
			<div class="col-xs-2">
				<div> <%= link_to 'About', page_path('about') %> </div>
			</div>
			<div class="col-xs-2">
			<div><%= link_to 'Terms of Services', page_path('tos') %></div>
			</div>
			<div class="col-xs-2">
			<div><%= link_to 'Privacy Policy', page_path('privacy') %> </div>
			</div>
			<div class="col-xs-2">
			<div><%= link_to 'FAQ', page_path('faq') %> </div>
			</div>
			<div class="col-xs-2"></div>
		</div>
		</div>
	</footer>
    <%= yield %>
  </body>
</html>
