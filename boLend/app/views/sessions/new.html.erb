<% provide(:title, "Log in") %>

<div class="containter" style="margin-top:5em;">
	<div class="row">
		<div class="col-lg-4 col-sm-4 col-xs-3"></div>
  	  	<div class="col-lg-4 col-sm-4 col-xs-6" style="border: 1px solid #eeeff2;">
			<h1 class="text-center" style="margin-bottom:1em"> Welcome to Bolend </h1>
    		<%= form_for(:session, url: login_path) do |f| %>
				<% if flash[:failure] %>
			   	 	<div class="alert alert-danger"><%= flash[:failure] %></div>
				<% end %>
				<%= f.label :email %>
      		  	<%= f.email_field :email, class: 'form-control margin-bot-1' %>

      		 	<%= f.label :password %><%=link_to "Forgot your password?", new_password_reset_path,class:'pull-right',style:"font-size:14px;"%>
      		  	<%= f.password_field :password_digest, class: 'form-control margin-bot-1' %>
				
      		  	<%= f.submit "Log in", class: "btn btn-info margin-bot-1", style:"width:100%;" %>
    		<% end %>
			
    		<%= link_to "Sign in with Facebook", "/auth/facebook", class: "btn btn-primary margin-bot-1",style:"width:100%;" %>
			<div class="text-center"><p style="font-size:18px"> or </p></div>
    		<%= link_to "Sign up", "users/new",class: "btn btn-success margin-bot-1",style:"width:100%;" %>
			<div style="padding-bottom:5em;" />
  	  	</div>
		<div class="col-lg-4 col-sm-4 col-xs-3"></div>
	</div>
</div>