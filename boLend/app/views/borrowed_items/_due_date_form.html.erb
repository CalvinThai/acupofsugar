   <%= form_for([ @user, @borrowed_item ]) do |form| %>
    <p>
    	<% curr_due = @borrowed_item.due_date.strftime("%Y-%m-%d") %>
      <%= form.label 'I would like to extend due date for this item until:' %><br>
      <%= form.date_field(:temp_due_date, value: curr_due, min: curr_due) %>
    </p>
    <p>
      <%= form.submit 'Send extension request' %>
    </p>
  <% end %>