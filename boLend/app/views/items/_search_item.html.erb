<%= form_tag('/items', method: :get) do %>
    <%= text_field_tag :name, params[:name], placeholder: "Search item" %>
    <%= text_field_tag :status, params[:status], placeholder: "Status" %>
    <%= submit_tag 'Search ', name: nil %>
<% end %>
<% if not @items.present? %>
	<% if params[:name].present? and @items.blank?%>
		<div>
			We couldn't find any items for
			<span>	<%=params[:name] %> </span>
		</div>
	<% end %>
  <% end %>

  <% @items.each do |item| %>
  <ul>
    <li> <%= link_to item.name, item_path(item) %> </li> <br>
  </ul>
  <% end %>
  <h2>Agg1a</h2>


    <% if @aggs.aggs["status"].present? and @aggs.present? %>
          <span>Status</span>
          <ul  class="menu">
          <% @aggs.aggs["status"]["buckets"].each do |filter| %>
            <li><%= link_to "#{filter["key"]} (#{filter["doc_count"]})", "/items?status=#{filter["key"]}"%></li>
          <% end %>
          </ul>
      <% end %>


<h2>Agg2</h2>
  <% @aggs.aggs do |item| %>
  <ul>
    <li> <%= link_to item.name, item_path(item) %> </li> <br>
  </ul>
  <% end %>

  <h2>Items you own</h2>

  <table>
    <tr>
      <th>Item name</th>
      <th>Description</th>
      <th>Status</th>
    </tr>

    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.name %></td> <!--add item_path(item)-->
        <td><%= item.descr %></td>
        <td><%= item.status %></td>
        <!--add item.return_date column to db for lentout items-->
      </tr>
    <% end %>
  </table>
