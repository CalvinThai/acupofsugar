<div>
  <%= form_with(model: [ @user, @item ], local: true) do |form| %>
    <p>
      <%= form.label :inputName %><br>
      <%= form.text_field :name %>
    </p>
    <p>
      <%= form.label :images %><br>
      <%= form.file_field :images, multiple: true  %>
    </p>
    <p>
      <%= form.label :inputDescription %><br>
      <%= form.text_area :descr %>
    </p>
    <p>
      <%= form.label :inputStatus %><br>
      <%= form.text_area :status %>
    </p>

    <p>
      <%= form.label :inputCategory %><br>

      <%= form.select :category, [['Technology', 'Technology'],['Pets', 'Pets']] %>
    </p>

    <p>
      <%= form.submit %>
    </p>
  <% end %>
</div>
