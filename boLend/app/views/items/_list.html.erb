<div id="filterrific_results">

  <div>
    <%= page_entries_info items %>
  </div>

  <table>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th>Registered at</th>
    </tr>
    <% items.each do |item| %>
      <tr>
        <td><%= link_to item.name, item_path(item) %></td>
        <td><%= item.descr %></td>
        <td><%= item.category %></td>
        <td><%= item.created_at %></td>
      </tr>
    <% end %>
  </table>
</div>

<%= will_paginate items %>
