<% if flash[:registration_msg] %>
    <div class="notice"><%= flash[:registration_msg] %></div>
<% end %>
<h1>Sign up</h1>

    <%= form_for :user, url: users_path do |f| %>
      <%= f.label :fname %>
      <%= f.text_field :fname, :placeholder => "John" %>

      <%= f.label :lname %>
      <%= f.text_field :lname, :placeholder => "Smith" %>

      <%= f.label :email %>
      <%= f.email_field :email, :placeholder => "johnsmith55@gmail.com" %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.label :phonenum, "Phone Number" %>
      <%= f.text_field :phonenum, :placeholder => "416-754-7275" %>

      <%= f.label :address %>
      <%= f.text_field :address, :placeholder => "171 Silver Springs Blvd" %>

      <%= f.submit "Create my account" %>
    <% end %>