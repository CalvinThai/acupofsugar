<%= form_tag(users_path, method: :get) do %>
    <%= text_field_tag :name, params[:name], placeholder: "Search user name" %>
    <%= submit_tag 'Search ', name: nil %>
<% end %>
<% if not @users.present? %>
	<% if params[:name].present? and @users.blank?%>
		<div>
			We couldn't find any user name for 
			<span>	<%=params[:name] %> </span>
		</div>
	<% end %>
<% else %>
	<% for user in @users%>
 		<div>
			<!--should be directed to user profile page later -->
			<%= link_to "#{user.fname} #{user.lname}", user_path(user) %> 
			<% if @user.friends.include?(user) %>
				<%= button_tag 'Friends', disabled: true %>
			<% elsif not @user.pending_friends.include?(user)%>
				<%= button_to 'Add Friend', users_path(:friend => user), method: :post, form: {style: 'display:inline-block;'} %>
			<% else%>
				<%= button_tag 'Request Pending', :disabled => true %>
			<% end %>
	 	</div>
 	<% end %>
<% end %>

