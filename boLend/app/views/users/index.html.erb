<h1>
	<% time = Time.now.hour%>
	<% if time > 6 and time <12 %>
		Good Morning
	<% elsif time >= 12 and time <17%>
		Good Afternoon
	<% else %>
		Good Evening
	<% end %>
	<%=@user.fname%> <%=@user.lname%>
</h1>

<%= render  "users/search_user" %>
<br/>
<div id="friend_request_list">
	<%= render  "friendships/friend_requests"%>
</div>
<br/>
<div id="friend_list">
	<%= render  "friendships/friends"%>
</div>
<%= link_to 'Go to your personal page', user_path(@user) %> <!-- login should bring user to this path -->
